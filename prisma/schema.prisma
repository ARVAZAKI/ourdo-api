generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int        @id @default(autoincrement())
  name     String
  email    String     @unique
  password String
  role     String
  Donation Donation[]
}

model Campaign {
  id              Int        @id @default(autoincrement())
  name            String
  description     String
  image           String 
  donation_target Int
  category        String
  status          String
  start_date      DateTime
  end_date        DateTime
  Donation        Donation[]
}

model Donation {
  id         Int      @id @default(autoincrement())
  amount     BigInt
  campaign   Campaign @relation(fields: [campaignId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  campaignId Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     Int
}
